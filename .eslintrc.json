{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["plugin:jest/recommended", "eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["jest"],
  "rules": {
    "no-unused-vars": "warn",
    "no-var": "warn",
    "no-console": "off",
    "func-names": "off",
    "comma-dangle": ["warn", "only-multiline"],
    "quotes": [
      1,
      "single",
      { "allowTemplateLiterals": true, "avoidEscape": true }
    ],
    "camelcase": "error",
    "prefer-const": ["warn", {
      "destructuring": "all",
      "ignoreReadBeforeAssign": false
  }]
  }
}
